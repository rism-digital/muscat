<%
	content = Array.new
 	tag.for_every_child_sorted do |subfield|
		next if @item.marc.config.always_hide?(tag.tag, subfield.tag) || !(@editor_profile.show_all? || @item.marc.config.show_in_browse?(tag.tag, subfield.tag))
		content << subfield.content if subfield.content
	end
-%>
<tr class="row">
	<th valign="top">
		<% if (no_label == false) -%>
			<%= @editor_profile.get_label(tag.tag) %>
		<%- end %>
	</th>
	<td valign="top">
		<%= content.join(', ') %>
	</td>
</tr>
