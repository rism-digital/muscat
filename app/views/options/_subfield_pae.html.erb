<%
	tag_params = @editor_profile.options_config[tag_name]["tag_params"]
	random_string = SecureRandom.hex
%>
<table width="100%" class="marc_editor_pae_textbox">
<tr>
	<td>
		<textarea id="<%=random_string%>-textbox" class="autogrow subfield_entry serialize_marc pae_input marc_editor_hotkey" data-tag="<%=tag_name%>" data-subfield="<%=subfield%>" spellcheck="false"><%=h marc_subfield.content %></textarea>
	</td>
	<td width="20px">
		<a class="abutton ui-state-default marc_editor_button_left abutton-icon-solo ui-corner-all" style="margin: 4px;" href="#" data-pae-button="refresh" data-pae-box="<%=random_string%>-textbox" title="Refresh PAE"><span class="ui-icon ui-icon-refresh"></span>_</a>
	</td>
</tr>
</table>

