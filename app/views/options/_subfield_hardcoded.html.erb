<%
if marc_subfield && marc_subfield.content && !marc_subfield.content.strip.empty?
    value = marc_subfield.content
else
    value = params['value']
end

disabled = current_user.has_role?(:editor) || current_user.has_role?(:admin) ? "" : "disabled='true'"
%>

<input class="subfield_entry serialize_marc" size="100" type="text" data-tag="<%=tag_name%>" data-subfield="<%=subfield%>" value="<%= h value %>" <%=disabled%>/>
